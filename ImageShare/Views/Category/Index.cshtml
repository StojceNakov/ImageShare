@model IEnumerable<ImageShare.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <div id="showDialog" class="btn btn-success">Create new category</div>
</p>
<table class="table">
    <tr>
        <th>
           Categories
        </th>
        <th>

        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a href="#" class="edit" data-url="/@item.CategoryID">Edit</a>
                @Html.ActionLink("Delete", "Delete", "Category", new { id = @item.CategoryID }, null)
            </td>
        </tr>
    }

</table>

<div id='albumModal' class='modal' data-url='@Url.Action("CreateNewCategoryModal")'>
    <div id='modalContainer'>
    </div>
</div>

<div id='editCategory' class='modal' data-url='@Url.Action("Edit")'>
    <div id='editModal'>
    </div>
</div>

<script src="~/Content/ModalCreateNewAlbum.js"></script>
<script src="~/Content/ModalEditCategory.js"></script>